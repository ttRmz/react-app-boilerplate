{
  "name": "react-app-boilerplate",
  "version": "1.0.0",
  "description": "React boilerplate",
  "author": {
    "name": "Ramirez Tristan",
    "email": "tristan.rami@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ttRmz/react-app-boilerplate"
  },
  "bugs": {
    "url": "https://github.com/ttRmz/react-app-boilerplate/issues"
  },
  "scripts": {
    "clean:cache": "rm -rf node_modules/.cache",
    "start": "run-p start:*",
    "start:react-app": "react-scripts start",
    "start:storybook": "start-storybook -p 6006 -s public",
    "build": "run-s build:*",
    "build:assets": "sh scripts/build_assets.sh",
    "build:icons": "gulp --cwd scripts/ && sh scripts/build_icons.sh",
    "build:react-app": "react-scripts build",
    "build:storybook": "build-storybook -s public",
    "test": "react-scripts test --env=jsdom",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet",
    "prepare": "husky install"
  },
  "dependencies": {
    "@reach/router": "^1.3.4",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^17.0.18",
    "@types/reach__router": "^1.3.9",
    "@types/react": "^17.0.29",
    "@types/react-dom": "^17.0.0",
    "@types/react-helmet": "^6.1.3",
    "eslint-plugin-react": "^7.26.1",
    "i18next": "^19.4.2",
    "i18next-browser-languagedetector": "^4.1.1",
    "i18next-xhr-backend": "^3.2.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "react-i18next": "^11.12.0",
    "react-scripts": "5.0.0",
    "typescript": "^4.4.4",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.16.7",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-interactions": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/addon-storyshots": "^6.4.19",
    "@storybook/builder-webpack5": "^6.4.19",
    "@storybook/manager-webpack5": "^6.4.19",
    "@storybook/node-logger": "^6.4.19",
    "@storybook/preset-create-react-app": "^4.0.1",
    "@storybook/react": "^6.4.19",
    "@storybook/testing-library": "^0.0.9",
    "@types/classnames": "^2.3.1",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "gulp": "^4.0.2",
    "gulp-iconfont": "^10.0.3",
    "gulp-iconfont-css": "^3.0.0",
    "husky": "^7.0.2",
    "lint-staged": "^12.3.4",
    "node-sass": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "webpack": "^5.70.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "*.js": "eslint --cache --fix"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
